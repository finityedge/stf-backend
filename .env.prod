# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@db:5432/stf_portal?schema=public"

POSTGRES_USER=postgres
POSTGRES_DB=stf_portal
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# File Uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Portal Configuration
# ACADEMIC_YEAR=2025/26         # Override auto-computed academic year
# APPLICATION_DEADLINE=          # ISO date string (e.g., 2026-03-31)
# APPLICATION_WINDOW_OPEN=true   # Set to 'false' to close applications
CONTACT_EMAIL=info@soipantuyafoundation.org
CONTACT_PHONE=+254 700 000 000

